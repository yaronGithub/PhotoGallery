<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoGallery.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="100"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Button
                x:Name="UPbtn"
                Clicked="UpPic"
                Text="UP"/>

            <Image
                x:Name="pImg"
                Source="pianoo2.png"
                SemanticProperties.Description="piano!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Button
                x:Name="DOWNbtn"
                Clicked="DownPic"
                Text="DOWN" />
                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
